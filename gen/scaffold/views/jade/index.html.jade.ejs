.jumbotron
  h2 All <%= names.constructor.plural %>
  != linkTo('Create a new <%= names.constructor.singular %>', add<%= names.constructor.singular %>Path, {class: 'btn btn-default pull-right'})

div#<%= names.property.plural %>-list
  if <%= names.property.plural %>
    each <%= names.property.singular %> in <%= names.property.plural %>
      .row.list-item(id="<%= names.property.singular %>-" + <%= names.property.singular %>.id)
        .col-md-6
          h3!= linkTo(<%= names.property.singular %>.<%= properties['default'].name || "id" %>, <%= names.property.singular %>Path(<%= names.property.singular %>.id))
        .col-md-6
          h3
            i.glyphicon-list-alt
            = <%= names.property.singular %>.id
