<div class="jumbotron">
  <h2 class="<%= properties['default'].name || "id" %>">{{ <%= names.property.singular %>.<%= properties['default'].name || "id" %> }}</h2>
  <a href="/<%= names.property.plural %>/{{params.id}}/edit" class="btn btn-default pull-right">Edit this <%= names.property.singular %></a>
  <a href="/<%= names.property.plural %>" class="btn btn-default pull-right">Back to list</a>
</div>

<h2><%= names.constructor.singular %> Properties</h2>
{% for prop in <%= names.property.singular %> %}
<div class="row list-item">
  <div class="col-md-4">
    <h3>{{loop.key}}</h3>
  </div>
  <div class="col-md-8">
    <h3><i class="glyphicon-list-alt"></i><span class="{{ loop.key }}">{{ prop }}</span></h3>
  </div>
</div>
{% endfor %}
