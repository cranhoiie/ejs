.hero-unit
  h2 To Do List
  a(href="/todos/add", class="btn pull-right") Create a new To Do

- if (todos && todos.length)
  - for (var i in todos)
    .row.todo-item
      .span8
        h3
          a(href="/todos/"+todos[i].id+"/edit")= todos[i].title
      .span4
        h3
          i.icon-list-alt= todos[i].status
